<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.phoenix.calculator.MainActivity"
    android:background="#f4252323">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#f4252323"
        android:id="@+id/textView"
        android:text="HEllO"
        android:textColor="#fff8f8"
        android:textSize="30dp"
        android:textAlignment="center"
        android:gravity="center"/>

    <Button
        android:id="@+id/one"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="1"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#f4252323"
        android:textColor="#FF0000"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/two"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="2"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/one"
        android:layout_toEndOf="@+id/one"
        android:background="#f4252323"
        android:textColor="#00FF00"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/three"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="3"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/two"
        android:layout_toEndOf="@+id/two"
        android:background="#f4252323"
        android:textColor="#0000FF"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/four"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="4"
        android:layout_below="@+id/one"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#f4252323"
        android:textColor="#FFFF00"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/five"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="5"
        android:layout_below="@+id/two"
        android:layout_toRightOf="@+id/four"
        android:layout_toEndOf="@+id/four"
        android:background="#f4252323"
        android:textColor="#FF00FF"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/six"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="6"
        android:layout_alignBottom="@+id/five"
        android:layout_toRightOf="@+id/two"
        android:layout_toEndOf="@+id/two"
        android:background="#f4252323"
        android:textColor="#00FFFF"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/seven"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="7"
        android:layout_below="@+id/four"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#f4252323"
        android:textColor="#ABCDEF"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/eight"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="8"
        android:layout_below="@+id/four"
        android:layout_toRightOf="@+id/four"
        android:layout_toEndOf="@+id/four"
        android:background="#f4252323"
        android:textColor="#FFA000"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/nine"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="9"
        android:layout_below="@+id/six"
        android:layout_toRightOf="@+id/five"
        android:layout_toEndOf="@+id/five"
        android:background="#f4252323"
        android:textColor="#df0d0d"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/zero"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:text="0"
        android:layout_below="@+id/eight"
        android:layout_toRightOf="@+id/seven"
        android:layout_toEndOf="@+id/seven"
        android:background="#f4252323"
        android:textColor="#4dd726"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/dot"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:text="."
        android:layout_below="@+id/seven"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#f4252323"
        android:textColor="#01baab"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/equal"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:text="="
        android:layout_below="@+id/nine"
        android:layout_toRightOf="@+id/zero"
        android:layout_toEndOf="@+id/zero"
        android:background="#f4252323"
        android:textColor="#FF80AB"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/plus"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:text="+"
        android:layout_above="@+id/equal"
        android:layout_toRightOf="@+id/nine"
        android:layout_toEndOf="@+id/nine"
        android:background="#f4252323"
        android:textColor="#47ff47"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/minus"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:text="-"
        android:layout_above="@+id/plus"
        android:layout_toRightOf="@+id/six"
        android:layout_toEndOf="@+id/six"
        android:background="#f4252323"
        android:textColor="#bf00ff"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/multiply"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:text="ร"
        android:layout_above="@+id/minus"
        android:layout_toRightOf="@+id/three"
        android:layout_toEndOf="@+id/three"
        android:background="#f4252323"
        android:textColor="#fda101"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/division"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:text="รท"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/three"
        android:layout_toEndOf="@+id/three"
        android:background="#f4252323"
        android:textColor="#fdff6a"
        android:textSize="25dp"/>
</RelativeLayout>
